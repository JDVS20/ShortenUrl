
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to Shorten URL</h2>

<div>
    <p> Insert the complete URL that you want to convert in short url</p>
    <br />
    <form>
        <div class="form-group">
            <label for="txtCompleteURL">URL</label>
            <input type="text" class="form-control" id="txtCompleteURL" placeholder="Paste the URL complete to convert it" required>
        </div>
        <div class="form-group">
            <label for="txtResult">Short URL</label>
            <input type="text" class="form-control" id="txtResult" readonly="readonly" placeholder="Result of URL ">
        </div>
        <button type="submit" id="btnGenerate" class="btn btn-primary">Generate</button>
    </form>
</div>

<div class="accordion" id="accordionHistory">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseHistory" aria-expanded="true" aria-controls="collapseHistory">
                    <h4> One hundred URL more recently </h4>
                </button>
            </h5>
        </div>

        <div id="collapseHistory" class="collapse" aria-labelledby="headingOne" data-parent="#accordionHistory">
            
            <table class="table">
                <thead class="table-class">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Complete URL</th>
                        <th scope="col">Short URL</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>the Bird</td>
                    </tr>
                </tbody>
            </table>       

        </div>
    </div>
</div>

