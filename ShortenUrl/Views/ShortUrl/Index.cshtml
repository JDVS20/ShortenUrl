
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to Shorten URL</h2>

<div>
    <p> Insert the complete URL that you want to convert in short URL</p>
    <br />
    <form>
        <div class="form-group">
            <label for="txtCompleteURL" style="font-size:20px">URL</label>
            <input type="text" class="form-control" id="txtCompleteURL" name="txtCompleteURL" placeholder="Paste the URL complete to convert it" required>
            <button type="button" id="btnGenerate" class="btn btn-success" onclick="generateURL()">Generate</button>
            <button type="button" id="btnClean" class="btn btn-primary" onclick="cleanFields()">Clean</button>
        </div>
        <div class="form-group">
            <label for="txtResult" style="font-size:20px">Short URL</label>
            <input type="text" class="form-control" id="txtResult" readonly="readonly" placeholder="Result of URL">
        </div>
    </form>
</div>
<br />

<h3 style="text-align:center;">Recent URL Table </h3>
<table class="table table-responsive table-condensed" style="text-align: center; " id="tblUrlList">
    <thead>
        <tr style="background-color: dodgerblue;color: white;font-size: 15px;">
            <th class="text-center" id="orgUrl">Original Url</th>
            <th class="text-center" id="shortUrl">Short Url</th>
            <th class="text-center" id="dateCreated">Date Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.userdetails) { 
        <tr>
            <td width="60" class="hidden-phone text-center"><strong>@item.OriginalUrl</strong></td>
            <td width="20" class="hidden-phone text-center"><strong>@item.ShortUrl</strong></td>
            <td width="10" class="hidden-phone text-center"><strong>@item.DateCreated</strong></td>            
        </tr>

         } 
    </tbody>
</table>


@Scripts.Render("~/Scripts/JavaScript/ShortUrl.js")
